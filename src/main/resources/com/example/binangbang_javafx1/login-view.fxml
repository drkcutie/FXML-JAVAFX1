<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="292.0" prefWidth="206.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.binangbang_javafx1.HelloController">
   <children>
      <VBox fx:id="pnLogin" alignment="TOP_CENTER" prefHeight="292.0" prefWidth="240.0" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome">
               <font>
                  <Font size="25.0" />
               </font>
            </Text>
            <HBox>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Username: " />
                  <TextField fx:id="fieldUsername" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password: " />
                  <TextField fx:id="fieldPassword" prefHeight="25.0" prefWidth="142.0" />
               </children>
            </HBox>
            <Button fx:id="btnSignIn" mnemonicParsing="false" onMouseClicked="#userLogin" text="Sign In" />
            <Text fx:id="messageText" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
